all
{
        %CC sm src/*.c
}

movcc
{
        # this will probably never work on windows
        %SET CC movcc
        %CC sm src/*.c
}

clean
{
        !rm -f sm
}

install root (all)
{
        !cp -f sm /usr/local/bin/sm
}

debug
{
        %APPEND CFLAGS -Og -fsanitize=address -fsanitize=leak -fsanitize=undefined
        %CC sm src/*.c
}
